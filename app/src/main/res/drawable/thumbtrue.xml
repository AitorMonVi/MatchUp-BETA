<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/white"/>
            <size
                android:height="24dp"
                android:width="24dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/grey"/>
