<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MatchUpBETA" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
    </style>

    <!-- Theme.MaterialComponents.Light.NoActionBar -->
    <!-- Theme.Material3.DayNight.NoActionBar -->

    <style name="AppBackground">
        <item name="android:background">@color/app_background_drk</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:backgroundTint">@color/button_drk</item>
        <item name="android:textColor">@color/button_text_drk</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputBackground">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:backgroundTint">@color/input_drk</item>
        <item name="android:textColor">@color/text_lht</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/text_drk</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextColorNoTitle">
        <item name="android:textColor">@color/text_drk</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="likes"><item name="android:background">@drawable/heart_drk</item></style>
    <style name="scroll"><item name="android:background">@drawable/smartphone_drk</item></style>
    <style name="messages"><item name="android:background">@drawable/messenger_drk</item></style>
    <style name="profile"><item name="android:background">@drawable/user_drk</item></style>
    <style name="search"><item name="android:background">@drawable/search_drk</item></style>
    <style name="settings"><item name="android:background">@drawable/setting_drk</item></style>
    <style name="send"><item name="android:background">@drawable/send_drk</item></style>

</resources>