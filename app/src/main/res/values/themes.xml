<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MatchUpBETA" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <!-- Theme.MaterialComponents.Light.NoActionBar -->
    <!-- Theme.Material3.DayNight.NoActionBar -->

    <style name="AppBackground">
        <item name="android:background">@color/app_background_lht</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:backgroundTint">@color/button_lht</item>
        <item name="android:textColor">@color/button_text_lht</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputBackground">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:backgroundTint">@color/input_lht</item>
        <item name="android:textColor">@color/text_lht</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/text_lht</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextColorNoTitle">
        <item name="android:textColor">@color/text_lht</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.MatchUpBETA" parent="Base.Theme.MatchUpBETA" />
</resources>